<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    android:layout_margin="8dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageViewNameIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingBottom="8dp"
        android:src="@drawable/name"
        android:adjustViewBounds="true"
        android:contentDescription="@string/description_name_icon"/>
    <TextView
        android:id="@+id/textViewFirstName"
        android:layout_width="0dp"
        android:layout_height="match_parent"

        app:layout_constraintStart_toEndOf="@id/imageViewNameIcon"
        app:layout_constraintTop_toTopOf="@id/imageViewNameIcon"
        app:layout_constraintBottom_toBottomOf="@id/imageViewNameIcon"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="textViewFirstName"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/imageViewLastNameIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewNameIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/last_name"
        android:paddingBottom="8dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/description_last_name_icon"
        />

    <TextView
        android:id="@+id/textViewLastName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/imageViewLastNameIcon"
        app:layout_constraintTop_toTopOf="@id/imageViewLastNameIcon"
        app:layout_constraintBottom_toBottomOf="@id/imageViewLastNameIcon"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="textViewLastName"
        android:textSize="24sp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/imageViewAgeIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewLastNameIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/age"
        android:paddingBottom="8dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/description_age_icon"
        />

    <TextView
        android:id="@+id/textViewAge"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/imageViewAgeIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageViewAgeIcon"
        app:layout_constraintBottom_toBottomOf="@id/imageViewAgeIcon"
        tools:text="textViewAge"
        android:textSize="24sp"
        android:textColor="@color/black"/>





</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>